{
  "compilerOptions": {
     // File Layout
    "rootDir": "./src",  // ✅ Poprawione
    "outDir": "./dist",

    // Environment Settings
    "module": "es2022",  // ✅ Zmienione z esnext
    "target": "es2022",  // ✅ Stabilniejsze
    "lib": ["dom", "dom.iterable", "es2022"],  // ✅ Dodane dom i es2022
    "moduleResolution": "bundler",  // ✅ Zmienione z bundler
    "resolveJsonModule": true,
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    
    // Dekoratory
    "experimentalDecorators": true
    // ✅ USUNIĘTE "emitDecoratorMetadata" - nie potrzebujesz tego!
  },
  "include": [
    "src/**/*" // ✅ Kompiluj tylko pliki z src/
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}